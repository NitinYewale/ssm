# ssm - System Storage Manager

import os
import sys
from ssmlib import main

if __name__ == "__main__":
    if not os.geteuid() == 0:
        sys.exit("\nRoot privileges required to run this script!\n")
    try:
        sys.exit(main.main())
    except RuntimeError, ERR:
        print ERR
        sys.exit(1)
